<div class="col-12 m-0 p-0 overflow-auto">
  <ul id="lista-conversas" class="list-group">
    <% allUsers.forEach(function(user) { %>
      <li class="list-group-item p-3 user-item" data-user-id="<%= user.id %>">
        <a href="#" class="text-decoration-none user-link">
          <div class="row">
            <div class="col-3">
              <img src="/avatar.png" class="img-fluid rounded-circle border mt-1" alt="<%= user.username %>">
            </div>
            <div class="col-7">
              <p class="fw-bolder p-0 m-0"><%= user.username %></p>
              <p class="text-truncate text-muted"></p>
            </div>
            <div class="col-2 p-1">
              <small class="text-muted">13:07</small>
            </div>
          </div>
        </a>
      </li>
    <% }); %>
  </ul>
</div>